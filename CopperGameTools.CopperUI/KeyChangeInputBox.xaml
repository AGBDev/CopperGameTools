<Window x:Class="CopperGameTools.CopperUI.KeyChangeInputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CopperGameTools.CopperUI"
        mc:Ignorable="d"
        Title="Copper Game Tools UI - Fast Edit Key" Height="230" Width="450"
        ResizeMode="NoResize">
        <StackPanel>
            <Label Content="Add New?" HorizontalAlignment="Center"/>
            <CheckBox x:Name="AddNew" HorizontalAlignment="Center"/>
            <Label Content="New Key Name" HorizontalAlignment="Center"/>
            <TextBox Width="200" MaxLength="100" x:Name="NewKeyName"/>
            <Label Content="New Key Value" HorizontalAlignment="Center"/>
            <TextBox Width="200" MaxLength="100" x:Name="NewKeyValue"/>
            <Button Content="Apply" Click="OKButtonClickEvent"/>
        </StackPanel>
</Window>
